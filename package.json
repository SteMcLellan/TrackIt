{
  "name": "trackit",
  "private": true,
  "workspaces": [
    "api",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build:frontend && npm run build:api",
    "build:api": "npm --workspace api run build",
    "build:frontend": "npm --workspace frontend run build",
    "dev:api": "npm --workspace api run start",
    "dev:frontend": "npm --workspace frontend run start",
    "test:frontend": "npm --workspace frontend run test",
    "lint": "npm run lint:frontend && npm run lint:api",
    "lint:api": "eslint \"api/**/*.ts\"",
    "lint:frontend": "npm --workspace frontend run lint",
    "lint:frontend:eslint": "eslint \"frontend/**/*.ts\"",
    "format": "prettier --write \"api/**/*.{ts,js,json,md}\" \"frontend/**/*.{ts,js,json,md,css,html}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.14.0",
    "prettier": "^3.4.2",
    "typescript": "5.9.3"
  }
}
